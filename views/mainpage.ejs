<html>
	<head>
		<title>Discussion Board</title>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
		<link rel="stylesheet" href="css/main.css">
	</head>
	<body>


        <div id="deptalert" class="alert alert-danger alert-dismissible" role="alert">
            You have entered the wrong department
        </div>


		<div class="row-fluid" id="deptForm">
		    <div class="hero-unit">
			    <h2>Welcome to LearnTogether Discussion Board!</h2>
			    <p>Please enter your department:</p>
			      	  
				<input type="text" id= "deptname" placeholder="Your department..."> 		   
				<button id="goBtn" class="btn btn-primary">Go</button>
					   
			</div>
		</div>

		<section class="viewall" id="allDiscusions">


			<ul class="cards">
				<% rows.forEach(function(data){ %>
				<a href="/post?post_id=<%=data.post_id%>" >

			   	 	<div class="panel panel-default"><h1><%=data.post_title%></h1>

			   	 		<div>
			   	 			<p><%=data.post_date%></p>
			   	 			by the <%=data.dept_name%> department
			   	 		</div>
			   	 	</div>
			  	<% }) %>
			  	</a>

			</ul>
			<section id="createPost">
	            <form class="form-horizontal" id="create-post-form" role="form">

	                <div class="form-group">
	                    <label for="title-input" class="col-sm-2 control-label">Title</label>
	                    <div class="col-sm-5">
	                        <input type="text" id="title-input" name="title" class="form-control" placeholder="Your title" />
	                    </div>
	                </div>

	                <div class="form-group">
	                    <label for="content-input" class="col-sm-2 control-label">Content</label>
	                    <div class="col-sm-5">
	                        <input type="text" id="content-input" name="content" class="form-control" placeholder="content"/>
	                    </div>
	                </div>
	            </form>
			</section>


			<button id="create-button"class="btn btn-danger">Create Discussion</button>

		</section>


        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.2/angular.min.js"></script>
        <script src="https://code.jquery.com/jquery-2.1.1.min.js" type="text/javascript"></script>
        <script src="js/board.js"></script>

	</body>
</html>


